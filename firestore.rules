rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isActive == true;
    }

    function isOperator() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'operator' &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isActive == true;
    }

    function isAdminOrOperator() {
      return isAdmin() || isOperator();
    }

    // Users collection - only admins can manage users
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow delete: if false; // Never allow user deletion
    }

    // Trucks collection
    match /trucks/{truckId} {
      allow read: if isAdminOrOperator();
      allow write: if isAdmin();
    }

    // Drivers collection
    match /drivers/{driverId} {
      allow read: if isAdminOrOperator();
      allow write: if isAdmin();
    }

    // Materials collection
    match /materials/{materialId} {
      allow read: if isAdminOrOperator();
      allow write: if isAdmin();
    }

    // Locations collection
    match /locations/{locationId} {
      allow read: if isAdminOrOperator();
      allow write: if isAdmin();
    }

    // Shipments collection
    match /shipments/{shipmentId} {
      allow read: if isAdminOrOperator();
      allow write: if isAdminOrOperator(); // Both admin and operators can create/update shipments
    }

    // Tickets collection
    match /tickets/{ticketId} {
      allow read: if isAdminOrOperator();
      allow write: if isAdminOrOperator();
    }

    // Deny all other paths by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}